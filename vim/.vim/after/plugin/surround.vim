" Hotkey for quotes.
" (Less useful since I converted to dvorak.)
let g:surround_{char2nr('q')} = "'\r'"
let g:surround_{char2nr('Q')} = "\"\r\""

" "y" for 引号.
let g:surround_{char2nr('y')} = "「\r」"
let g:surround_{char2nr('Y')} = "『\r』"
" "k" for 括号.
let g:surround_{char2nr('k')} = "（\r）"
let g:surround_{char2nr('K')} = "【\r】"
